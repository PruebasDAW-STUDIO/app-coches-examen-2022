<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/cars/edit/{{link.id}}" method="POST">
                        <div class="form-group mb-3">
                            <input type="text" value="{{link.marca}}" class="form-control" name="marca" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" value="{{link.modelo}}" class="form-control" name="modelo" placeholder="URL">
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" value="{{link.potencia}}" class="form-control" name="potencia" placeholder="URL">
                        </div>
                        <div class="form-group mb-3">
                            <input type="url" value="{{link.url}}" class="form-control" name="url" placeholder="URL">
                        </div>

                        <div class="form-group text-center">
                            <button class="btn btn-success btn-block"><i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>